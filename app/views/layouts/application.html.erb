<!DOCTYPE html>
<html>
<head>
  <title>SELTProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div class="container spotitude-heading">
  <div class="row">
    <div class="col-lg-12">
      <h1>Spotitude</h1>
      <h1><small> Spotitude combines your Spotify and YouTube music experience</small></h1>
    </div>
  </div>
</div>


<% if @current_user %>
    <div class="container form-container">
      <div class="row">
        <div class="col-sm-12">
          <h1>Hi <%= @current_user.name %>!</h1>
          <form action='/signout' method='GET'>
            <button type="submit" class="btn btn-success btn-lg center-block">Sign out here!</button>
          </form>
        </div>
      </div>
    </div>
<% else %>
    <div class="container form-container">
      <div class="row">
        <div class="col-sm-12">
          <hr>
          <form action='/auth/spotify' method='GET'>
            <button type="submit" class="btn btn-success btn-lg center-block" id="loginbutton">Login With Spotify!</button>
          </form>
          <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
          </div>
        </div>
      </div>
    </div>
<% end %>
</body>
<%= yield %>
</html>
